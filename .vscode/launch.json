{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "C++ Debug",
            "type": "cppvsdbg",
            "request": "launch",
            // 匹配tasks.json的输出路径
            "program": "${workspaceFolder}/build/compiler.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build", 
            "externalConsole": true,
            "MIMode": "gdb",
            "miDebuggerPath": "C:/msys64/ucrt64/bin/gdb.exe", // 对应你的msys路径
            "preLaunchTask": "C++ Compile", // 和tasks.json的label一致
            "setupCommands": [
                {
                    "description": "启用gdb漂亮打印",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}